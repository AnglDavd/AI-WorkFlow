{
  "metadata": {
    "version": "1.0.0",
    "last_updated": "2025-07-19",
    "description": "Technology-agnostic UI/UX healing standards for comprehensive application assessment",
    "minimum_acceptable_score": 8,
    "scoring_scale": "1-10 where 10 is industry-leading excellence"
  },

  "scoring_matrix": {
    "dimensions": {
      "visual_consistency": {
        "weight": 0.20,
        "description": "Design system adherence and visual harmony",
        "minimum_score": 8
      },
      "cro_optimization": {
        "weight": 0.25,
        "description": "Conversion rate optimization and user journey effectiveness",
        "minimum_score": 8
      },
      "accessibility": {
        "weight": 0.20,
        "description": "WCAG 2.1 compliance and inclusive design",
        "minimum_score": 8
      },
      "architecture": {
        "weight": 0.15,
        "description": "Code quality, maintainability, and scalability",
        "minimum_score": 8
      },
      "performance": {
        "weight": 0.10,
        "description": "Load times, optimization, and technical efficiency",
        "minimum_score": 8
      },
      "responsive_design": {
        "weight": 0.10,
        "description": "Multi-device compatibility and mobile-first approach",
        "minimum_score": 8
      }
    },

    "score_definitions": {
      "10": {
        "label": "Exceptional",
        "description": "Industry-leading implementation, benchmark quality",
        "criteria": [
          "Exceeds all industry standards",
          "Innovative approaches implemented",
          "Zero critical issues",
          "Future-proof architecture",
          "Best-in-class user experience"
        ]
      },
      "9": {
        "label": "Excellent",
        "description": "Superior implementation with minor optimization opportunities",
        "criteria": [
          "Meets all industry standards excellently",
          "Modern best practices implemented",
          "No critical issues, minimal minor issues",
          "Well-architected and maintainable",
          "High-quality user experience"
        ]
      },
      "8": {
        "label": "Good",
        "description": "Solid implementation meeting standards (MINIMUM ACCEPTABLE)",
        "criteria": [
          "Meets all essential industry standards",
          "Good practices generally followed",
          "No critical issues, few minor issues",
          "Adequate architecture and maintainability",
          "Satisfactory user experience"
        ]
      },
      "7": {
        "label": "Fair",
        "description": "Adequate but requires improvement to meet standards",
        "criteria": [
          "Meets basic requirements",
          "Some best practices missing",
          "Minor critical issues present",
          "Architecture needs improvement",
          "User experience has notable gaps"
        ]
      },
      "6": {
        "label": "Below Standard",
        "description": "Below acceptable quality, significant issues present",
        "criteria": [
          "Falls short of industry standards",
          "Multiple best practices ignored",
          "Several critical issues present",
          "Poor architecture decisions",
          "User experience significantly impacted"
        ]
      },
      "5": {
        "label": "Poor",
        "description": "Poor implementation requiring major improvements",
        "criteria": [
          "Significantly below standards",
          "Many fundamental issues",
          "Multiple critical problems",
          "Architecture poorly designed",
          "Poor user experience"
        ]
      },
      "1-4": {
        "label": "Unacceptable",
        "description": "Severely flawed to completely broken implementation",
        "criteria": [
          "Far below acceptable standards",
          "Fundamental architecture flaws",
          "Critical functionality broken",
          "Major security/accessibility violations",
          "Unusable or broken user experience"
        ]
      }
    }
  },

  "visual_consistency_standards": {
    "design_tokens": {
      "colors": {
        "primary_palette": {
          "minimum_contrast_ratio": 4.5,
          "maximum_colors": 12,
          "semantic_naming_required": true
        },
        "semantic_colors": [
          "success", "warning", "error", "info", 
          "neutral", "background", "surface", "text"
        ]
      },
      "typography": {
        "scale_ratio": {
          "recommended": [1.125, 1.2, 1.25, 1.333, 1.414, 1.5, 1.618],
          "minimum_sizes": 6,
          "maximum_sizes": 12
        },
        "font_weights": {
          "minimum": 3,
          "recommended": ["light", "regular", "medium", "semibold", "bold"]
        },
        "line_heights": {
          "body_text": [1.4, 1.6],
          "headings": [1.1, 1.3]
        }
      },
      "spacing": {
        "base_unit": 8,
        "scale_multipliers": [0.25, 0.5, 1, 1.5, 2, 3, 4, 6, 8, 12, 16, 24],
        "consistent_application": true
      }
    },

    "component_consistency": {
      "button_variants": {
        "minimum_variants": ["primary", "secondary", "outline", "ghost"],
        "states_required": ["default", "hover", "focus", "active", "disabled"],
        "size_variants": ["small", "medium", "large"]
      },
      "form_elements": {
        "consistent_styling": true,
        "validation_states": ["default", "error", "success", "warning"],
        "placeholder_standards": true,
        "label_association": "required"
      },
      "navigation": {
        "consistent_patterns": true,
        "clear_hierarchy": true,
        "breadcrumb_implementation": "recommended",
        "mobile_menu_pattern": "required"
      }
    }
  },

  "accessibility_standards": {
    "wcag_compliance": {
      "level": "AA",
      "version": "2.1",
      "color_contrast": {
        "normal_text": 4.5,
        "large_text": 3.0,
        "non_text_elements": 3.0
      }
    },
    "keyboard_navigation": {
      "tab_order_logical": true,
      "focus_indicators_visible": true,
      "skip_links_present": true,
      "keyboard_shortcuts": "documented"
    },
    "screen_reader_support": {
      "semantic_html": true,
      "aria_labels": "where_needed",
      "alt_text": "descriptive",
      "heading_hierarchy": "proper"
    },
    "interactive_elements": {
      "minimum_touch_target": 44,
      "clear_purpose": true,
      "error_identification": true,
      "success_feedback": true
    }
  },

  "performance_standards": {
    "load_times": {
      "first_contentful_paint": 1.8,
      "largest_contentful_paint": 2.5,
      "cumulative_layout_shift": 0.1,
      "first_input_delay": 100
    },
    "optimization": {
      "image_optimization": true,
      "css_minification": true,
      "javascript_bundling": true,
      "lazy_loading": "where_appropriate",
      "caching_strategy": "implemented"
    },
    "bundle_sizes": {
      "javascript_budget": 200,
      "css_budget": 100,
      "image_budget": 500,
      "font_budget": 100
    }
  },

  "responsive_design_standards": {
    "breakpoints": {
      "mobile_first": true,
      "minimum_breakpoints": ["mobile", "tablet", "desktop"],
      "fluid_typography": "recommended",
      "flexible_layouts": true
    },
    "touch_interfaces": {
      "minimum_touch_target": 44,
      "gesture_support": "where_appropriate",
      "hover_alternatives": true
    },
    "device_testing": {
      "cross_browser": ["Chrome", "Firefox", "Safari", "Edge"],
      "mobile_devices": ["iOS", "Android"],
      "screen_readers": ["NVDA", "JAWS", "VoiceOver"]
    }
  },

  "architecture_standards": {
    "code_organization": {
      "separation_of_concerns": true,
      "component_modularity": true,
      "reusable_patterns": true,
      "consistent_naming": true
    },
    "api_design": {
      "rest_standards": "followed",
      "consistent_responses": true,
      "error_handling": "comprehensive",
      "documentation": "complete"
    },
    "database_design": {
      "normalized_structure": true,
      "efficient_queries": true,
      "indexing_strategy": "optimized",
      "backup_strategy": "implemented"
    },
    "security": {
      "input_validation": true,
      "authentication": "secure",
      "authorization": "role_based",
      "data_encryption": "where_required"
    }
  },

  "testing_requirements": {
    "unit_tests": {
      "coverage_minimum": 80,
      "critical_paths": 100
    },
    "integration_tests": {
      "api_endpoints": "all",
      "user_flows": "critical"
    },
    "accessibility_tests": {
      "automated_scanning": true,
      "manual_testing": "recommended",
      "screen_reader_testing": true
    },
    "performance_tests": {
      "load_testing": true,
      "lighthouse_audits": true,
      "real_device_testing": true
    }
  },

  "industry_benchmarks": {
    "ecommerce": {
      "conversion_rate": [2.5, 3.5],
      "cart_abandonment": [65, 75],
      "page_load_time": [2, 3]
    },
    "saas": {
      "signup_conversion": [1, 3],
      "user_engagement": [40, 60],
      "feature_adoption": [20, 40]
    },
    "content": {
      "bounce_rate": [40, 60],
      "time_on_page": [60, 180],
      "page_views_session": [2, 4]
    }
  },

  "validation_tools": {
    "accessibility": [
      "axe-core",
      "WAVE",
      "Lighthouse",
      "Pa11y"
    ],
    "performance": [
      "Lighthouse",
      "WebPageTest",
      "GTmetrix",
      "Core Web Vitals"
    ],
    "code_quality": [
      "ESLint",
      "SonarQube",
      "CodeClimate",
      "Prettier"
    ],
    "cross_browser": [
      "BrowserStack",
      "Sauce Labs",
      "CrossBrowserTesting",
      "LambdaTest"
    ]
  },

  "remediation_patterns": {
    "visual_fixes": {
      "inconsistent_spacing": {
        "solution": "Implement design token system",
        "implementation": "CSS custom properties or design system"
      },
      "color_violations": {
        "solution": "Update color palette for accessibility",
        "implementation": "WCAG-compliant color adjustments"
      }
    },
    "performance_fixes": {
      "large_bundles": {
        "solution": "Code splitting and lazy loading",
        "implementation": "Dynamic imports and route-based splitting"
      },
      "unoptimized_images": {
        "solution": "Modern image formats and compression",
        "implementation": "WebP, AVIF, responsive images"
      }
    },
    "accessibility_fixes": {
      "missing_alt_text": {
        "solution": "Descriptive alternative text",
        "implementation": "Semantic alt attributes"
      },
      "keyboard_navigation": {
        "solution": "Proper tab order and focus management",
        "implementation": "tabindex and focus trap patterns"
      }
    }
  }
}