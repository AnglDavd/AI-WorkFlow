{
  "validation_rules": {
    "code_quality": {
      "enabled": true,
      "max_complexity": 10,
      "max_function_lines": 50,
      "require_documentation": true,
      "check_bash_syntax": true,
      "validate_markdown": true,
      "check_json_yaml": true
    },
    "security": {
      "enabled": true,
      "block_sensitive_data": true,
      "require_secure_paths": true,
      "scan_dependencies": true,
      "check_permissions": true,
      "validate_commands": true
    },
    "framework_compliance": {
      "enabled": true,
      "require_claude_md_updates": true,
      "validate_workflow_structure": true,
      "check_integration_tests": false,
      "enforce_naming_conventions": true,
      "validate_todo_updates": true
    },
    "documentation": {
      "enabled": true,
      "sync_readme": true,
      "validate_comments": true,
      "check_changelog": false,
      "require_examples": false
    }
  },
  "quality_gates": {
    "minimum_score": 85,
    "block_on_security_issues": true,
    "block_on_critical_errors": true,
    "allow_override": false,
    "require_manual_review": false
  },
  "file_patterns": {
    "include": [
      "*.sh",
      "*.md",
      "*.json",
      "*.yml",
      "*.yaml",
      "ai-dev"
    ],
    "exclude": [
      ".git/**",
      ".ai_workflow/cache/**",
      ".ai_workflow/logs/**",
      "*.log",
      "*.tmp",
      "capturas/**"
    ]
  },
  "hooks": {
    "pre_commit": {
      "enabled": true,
      "timeout_seconds": 30,
      "fail_fast": true
    },
    "pre_push": {
      "enabled": true,
      "timeout_seconds": 60,
      "additional_checks": true
    },
    "commit_msg": {
      "enabled": true,
      "enforce_conventional_commits": true,
      "max_length": 100
    }
  }
}