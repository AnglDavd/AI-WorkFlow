{
  "quality_validation": {
    "enabled": true,
    "strict_mode": false,
    "auto_integration": {
      "precommit": true,
      "prp_execution": true,
      "cli_commands": true,
      "setup": true
    },
    "validation_levels": {
      "syntax": true,
      "tests": true,
      "dependencies": true,
      "code_quality": true
    },
    "thresholds": {
      "quality_score": 75,
      "test_coverage": 70,
      "complexity": 10,
      "duplication": 5
    },
    "bypass_commands": [
      "help",
      "version",
      "status",
      "configure"
    ]
  },
  "language_detection": {
    "enabled": true,
    "auto_configure_tools": true,
    "save_profiles": true,
    "use_prd_hints": true
  },
  "documentation_validation": {
    "enabled": true,
    "check_architecture_sync": true,
    "fail_on_outdated": false,
    "auto_update_suggestion": true
  }
}
