{
  "github_actions_config": {
    "version": "1.0.0",
    "status": "active",
    "features": {
      "token_optimization": {
        "enabled": true,
        "target_reduction": "30-40%",
        "compact_workflows": true,
        "smart_caching": true,
        "automatic_deployment": true
      },
      "security_audit": {
        "enabled": true,
        "schedule": "daily",
        "pr_validation": true,
        "vulnerability_scanning": true
      },
      "performance_monitoring": {
        "enabled": true,
        "benchmarking": true,
        "resource_optimization": true,
        "automated_cleanup": true
      },
      "cost_monitoring": {
        "enabled": true,
        "tracking": "continuous",
        "reporting": "weekly",
        "optimization_recommendations": true
      }
    },
    "triggers": {
      "push": [".ai_workflow/**", "CLAUDE.md", "manager.md"],
      "pull_request": ["main", "develop"],
      "schedule": {
        "token_analysis": "0 3 * * 0",
        "security_audit": "0 2 * * *",
        "maintenance": "0 4 * * *",
        "cost_monitoring": "0 6,18 * * *"
      },
      "manual": true
    },
    "user_benefits": {
      "automatic": {
        "optimized_workflows": true,
        "intelligent_caching": true,
        "security_validation": true,
        "performance_monitoring": true
      },
      "configurable": {
        "compact_mode": "USE_COMPACT_WORKFLOWS=true",
        "aggressive_caching": "CACHE_ENABLED=true",
        "minimal_output": "MINIMAL_OUTPUT=true",
        "cost_optimization": "COST_OPTIMIZATION=true"
      }
    },
    "deployment": {
      "automatic": true,
      "backward_compatible": true,
      "progressive_enhancement": true,
      "user_opt_in": false
    },
    "metrics": {
      "token_reduction": "30-40%",
      "performance_improvement": "20-30%",
      "cost_savings": "measurable",
      "quality_maintenance": "100%"
    }
  }
}